{% extends 'base.html.twig' %}

{% block body %}
<h1 id="heading" class="text-center">Find a Film</h1>

<p id="noResults" class="h6 hidden text-center">No results found. Try a different keyword and assure that your selected streaming services are available in your country.</p>


{# {{ form(form, { 'attr' : { 'class': 'film_search mx-auto col-10 d-flex flex-column' } }) }} #}

{{ form_start(form, { 'attr' : { 'class': 'film_search mx-auto col-10 d-flex flex-column' } }) }}
<div class="form-group">
    {{ form_label(form.keywords, 'Keywords') }}
    {{ form_widget(form.keywords) }}
    {{ form_errors(form.keywords) }}
</div>

<div class="form-group">
    {{ form_label(form.genre, 'Genre') }}
    {{ form_widget(form.genre) }}
    {{ form_errors(form.genre) }}
</div>

<div class="form-group">
    {{ form_label(form.country, 'Your Country *') }}
    {{ form_widget(form.country) }}
    {{ form_errors(form.country) }}
</div>

<div class="form-group">
    {{ form_label(form.language, 'Original Language') }}
    {{ form_widget(form.language) }}
    {{ form_errors(form.language) }}
</div>

<div class="form-group">
    {{ form_label(form.streamingServices, 'Your Subscriptions (4 maximum) *') }}
    {{ form_widget(form.streamingServices) }}
    {{ form_errors(form.streamingServices) }}
</div>

<div class="form-group">
    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary col-12 mt-3'}}) }}
</div>

{{ form_end(form) }}


<div id="card-container" class="row row-cols-2 row-cols-md-4 g-4 col-11 mx-auto">
</div>
<div class="text-center">
<button id="pagination" class="hidden btn btn-secondary my-4">Load more</button>
</div>
<p id="endResults" class="hidden text-center h4 mt-4">End of results</p>


<p class="text-center small mt-3">This product uses the TMDB API and <a href="https://www.movieofthenight.com/about/api.">Streaming Availability API</a> but is not endorsed or certified by either.</p>

{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
  <script src="js/search.js"></script>
{% endblock %}

{% endblock %}