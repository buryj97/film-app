<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/style.css">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body>
    {% block header %}

    <nav class="navbar navbar-expand-xxl ">
        <div class="container-fluid">
            <!-- LOGO -->
            <div class="col-3">
            <a class="navbar-brand" href="{{ path('app_search') }}"><img class="logo" src="/images/logo_trans.png" alt="Film Finder logo"></a>
            </div>
            <!-- NAVIGATION MENU -->
            <ul class="navbar-nav me-4 mb-2 mb-lg-0 d-flex align-items-center justify-content-end">

                <!-- NAVIGATION MENUS -->

                <li class="nav-item"><a class="nav-link" href="{{ path('app_search') }}">Find a Film</a></li>
                <li class="nav-item"><a class="nav-link" href="/">Get a Recommendation</a></li>

                <li class="nav-item">{% if is_granted('ROLE_USER') %}
                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                    <li class="services nav-item">
                    <a class="nav-link" href="{{ path('app_account')}}" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Your Profile"><i class="bi-person-fill"></i></a>
                </li>
                    {% else %}
                    <a class="nav-link" href="{{ path('app_login') }}">Login or Signup</a></li>
                    {% endif %}

                 
            </ul>
        </div>
    </nav>

    {% endblock %}

    {% block body %}
    {% endblock %}

    {% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    {% endblock %}
</body>

</html>