<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}Film Finder{% endblock %}</title>
    <link rel="icon"
        href="/images/favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/style.css">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body>
    {% block header %}
    <nav class="navbar navbar-expand-md ">
        <div class="container-fluid">
            <!-- LOGO -->
            <div class="col-3">
                <a class="navbar-brand" href="{{ path('app_search') }}"><img class="logo" src="/images/logo_trans.png" alt="Film Finder logo"></a>
            </div>
            <!-- NAVIGATION MENU -->
            <ul class="navbar-nav me-4 mb-2 mb-lg-0 d-flex align-items-center justify-content-end" id="menu">


                <li class="nav-item"><a class="nav-link" href="{{ path('app_search') }}">Find a Film</a></li>
                {# <li class="nav-item"><a class="nav-link" href="/">Get a Recommendation</a></li> #}
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item"><a class="nav-link" href="{{ path('app_admin') }}">Admin</a></li>
                {% endif %}

                <li class="nav-item">{% if is_granted('ROLE_USER') %}
                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                    <li class="services nav-item">
                    <a class="nav-link" href="{{ path('app_account')}}" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Your Profile"><i class="bi-person-fill"></i></a>
                </li>
                    {% else %}
                    <a class="nav-link" href="{{ path('app_login') }}">Login or Signup</a></li>
                    {% endif %}
               
            </ul>
        </div>
    </nav>

    {% endblock %}

    {% block body %}
  
    {% endblock %}

    {% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

    {% endblock %}
</body>

</html>